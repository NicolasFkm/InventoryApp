{
	"name": "MixturaManagement",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"start": "node --inspect=0.0.0.0 -r ts-node/register  -r tsconfig-paths/register ./src/server.ts",
		"prod": "node --inspect=5858 -r ts-node/register ./dist/server.js",
		"start:watch": "nodemon",
		"build": "tsc -p src",
		"watch": "nodemon src",
		"test": "mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.spec.ts",
		"coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/chai": "^4.2.16",
		"@types/express": "^4.17.6",
		"@types/faker": "^5.5.1",
		"@types/mocha": "^8.2.2",
		"@types/mongoose": "^5.10.4",
		"@types/node": "^13.13.4",
		"@types/sequelize": "^4.28.9",
		"@types/sinon": "^10.0.0",
		"@types/validator": "^13.1.3",
		"chai": "^4.3.4",
		"faker": "^5.5.3",
		"mocha": "^8.3.2",
		"nodemon": "^2.0.7",
		"nyc": "^15.1.0",
		"sinon": "^10.0.0",
		"ts-node": "^8.10.2",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"@testdeck/mocha": "^0.1.2",
		"axios": "^0.21.1",
		"bcrypt": "^3.0.8",
		"body-parser": "^1.19.0",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-plugin-import": "^2.20.2",
		"express": "^4.17.1",
		"helmet": "^4.4.1",
		"module-alias": "^2.2.2",
		"moment": "^2.29.1",
		"mongoose": "^5.10.9",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^6.4.0",
		"sequelize-typescript": "^2.0.0",
		"sqlite3": "^5.0.2",
		"validator": "^13.5.2"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "npm start",
		"ext": "ts"
	},
	"_moduleAliases": {
		"@enumerators": [
			"enumerators"
		],
		"@controllers": [
			"controllers"
		],
		"@models": [
			"models"
		],
		"@routes": [
			"routes"
		],
		"@services": [
			"services"
		],
		"@middlewares": [
			"middlewares"
		],
		"@helpers": [
			"helpers"
		],
		"@utils": [
			"utils"
		]
	}
}
